{
    "manifest_version": 3,
    "name": "Stock-Manager",
    "version": "1.0",
    "permissions": ["storage", "tabs"],
    "host_permissions": ["https://*.google.com/*", "http://127.0.0.1:5000/*"],
    "background": {
        "service_worker": "service-worker.js"
    },
    "action": { "default_popup": "popup.html" },
    "content_scripts": [
        {
            "matches": ["https://*.google.com/*"],
            "js": ["contentScript.js"]
        }
    ]
}